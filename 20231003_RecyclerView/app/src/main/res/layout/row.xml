<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="20dp"
    android:backgroundTintMode="multiply"
    android:id="@+id/clyRow">

    <ImageView
        android:id="@+id/imvPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/prince"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txvDesc"
        app:layout_constraintTop_toTopOf="@id/txvName"></ImageView>

    <TextView
        android:id="@+id/txvName"
        android:layout_width="0dp"

        android:layout_height="wrap_content"
        android:text="Prince"
        app:layout_constraintEnd_toEndOf="@id/txvDesc"
        app:layout_constraintStart_toStartOf="@id/txvDesc"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <TextView
        android:id="@+id/txvDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Don't let the little pony fool you. Once the Prince gets a running start, you WILL be trampled. Deals double damage once he gets charging. "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imvPhoto"
        app:layout_constraintTop_toBottomOf="@id/txvName">

    </TextView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/drop"
        app:layout_constraintStart_toStartOf="@id/imvPhoto"
        app:layout_constraintTop_toTopOf="@id/imvPhoto"></ImageView>

    <TextView
        android:id="@+id/txvCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="@id/imageView"
        app:layout_constraintEnd_toEndOf="@id/imageView"
        app:layout_constraintStart_toStartOf="@id/imageView"
        app:layout_constraintTop_toTopOf="@id/imageView"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>